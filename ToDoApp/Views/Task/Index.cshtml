@model List<TaskItem>

<h2>Tasks</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Category</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@ViewBag.CategoryNames[task.CategoryId]</td>
                <td>@ViewBag.UserNames[task.UserId]</td>
                @if (task.Done == false)
                {
                    <td>Not done</td>
                }
                else
                {
                    <td>Done</td>
                }
                <td><a asp-action="Edit" asp-route-id="@task.Id">Edit</a></td>
                <td>
                    <form asp-route-id="@task.Id" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
