@model List<Category>

@{
    Layout = "_LayoutApp";
}

<h2>Categories</h2>
<a asp-action="Create">Create Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Tasks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    @foreach (var task in category.Tasks)
                    {
                        <p>@task.Description</p>
                    }
                </td>
                @if (category.Id != 1)
                {
                <td><a asp-action="Edit" asp-route-id="@category.Id">Edit</a></td>
                <td>
                    <form asp-route-id="@category.Id" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
