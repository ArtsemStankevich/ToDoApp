@model List<User>

<h2>User</h2>
<a asp-action="Create">Create User</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Tasks</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>
                    @foreach (var task in user.Tasks)
                    {
                        <p>@task.Description</p>
                    }
                </td>
                @if (user.Id != 1)
                {
                    <td><a asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                    <td>
                        <form asp-route-id="@user.Id" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
